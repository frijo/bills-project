   	<% @users.each do |user| %>
     
      
  	    
  	    <option value=<%=user.nick_name%> > <%=user.nick_name%> -- <%=user.first_name%> <%=user.last_name%> </option>
  	    
    
    <% end %>

  	</select>
    
  </div>

</div>
